<h1><%= @company["name"] %></h1>

<h2><%= @company["city"] %>, <%= @company["state"] %></h2>

<ul>
  <% for contact in @contacts %>
    <li><%= contact["last_name"] %>, <%= contact["first_name"] %></li>
  <% end %>
</ul>
<h3>Contacts</h3>
<p>
  <a href="/contacts/new?company_id=<%= @company["id"] %>">New Contact</a>
</p>

<p><a href="/companies">Back to All Companies</a></p>

<p><%= button_to "Delete this company", @company, method: :delete %></p>
  
